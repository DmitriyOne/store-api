{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],

      "@hooks": ["src/hooks"],
      "@hooks/*": ["src/hooks/*"],

      "@helpers": ["src/helpers"],
      "@helpers/*": ["src/helpers/*"],

      "@services": ["src/services"],
      "@services/*": ["src/services/*"],

      "@firebase": ["./firebase"],
      "@firebase/*": ["./firebase/*"],

      "@context": ["src/context"],
      "@context/*": ["src/context/*"],

      "@env": ["./environment"],
      "@env/*": ["./environment/*"],

      "@constants": ["src/constants"],
      "@constants/*": ["src/constants/*"],

      "@enums": ["src/models/enums"],
      "@enums/*": ["src/models/enums/*"],

      "@interfaces": ["src/models/interfaces"],
      "@interfaces/*": ["src/models/interfaces/*"],

      "@screens": ["src/screens"],
      "@screens/*": ["src/screens/*"],

      "@images": ["public"],
      "@images/*": ["public/*"],

      "@styles": ["src/styles"],
      "@styles/*": ["src/styles/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "environment/env.d.ts", "next.config.js",
  ],
  "exclude": ["node_modules"]
}